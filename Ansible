yum install ansible-core python3-pip vim -y 

cat ~/.vimrc  >>

" Enable filetype detection, plugin, and indentation
filetype on
filetype plugin indent on

" Set YAML specific settings
#autocmd FileType yaml setlocal ts=2 sts=2 sw=2 expandtab

" Enable syntax highlighting
syntax on

" Set indentation options
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab
set autoindent
set smartindent

" Show line numbers
set number
set ai
set ts=2
set et
set cursorcolumn
